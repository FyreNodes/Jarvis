{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2020",
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@config": ["./config.ts"]
        },
        "typeRoots": ["node_modules/@types"],      
    },
    "exclude": ["/node_modules/"],
    "ts-node": {"require": ["tsconfig-paths/register", "dotenv/config"]}
}