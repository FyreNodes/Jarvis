{
    "compilerOptions": {
        "module": "CommonJS",
        "lib": ["ES6"],
        "esModuleInterop": true,
        "target": "ES6",
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@config": ["./config.ts"]
        },
        "typeRoots": ["node_modules/@types"],      
    },
    "exclude": ["/node_modules/"]
}